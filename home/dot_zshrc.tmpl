{{ if eq .chezmoi.os "darwin" -}}
#!/usr/bin/env zsh

# Uncomment to profile startup
# zmodload zsh/zprof

{{ include "shell/init.zsh" }}

{{  if lookPath "sheldon" -}}
# Source sheldon plugins
{{    output "sheldon" "source" | trim }}
{{  end -}}

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
[ -f "$HOME/.rye/env" ] && . "$HOME/.rye/env"
{{ end -}}

